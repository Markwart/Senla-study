<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="sample" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	
	<class>by.senla.study.board.model.entity.BaseEntity</class>
	<class>by.senla.study.board.model.entity.Ad</class>
	<class>by.senla.study.board.model.entity.Category</class>
	<class>by.senla.study.board.model.entity.Chat</class>
	<class>by.senla.study.board.model.entity.Comment</class>
	<class>by.senla.study.board.model.entity.Message</class>
	<class>by.senla.study.board.model.entity.PersonalData</class>
	<class>by.senla.study.board.model.entity.Ranking</class>
	<class>by.senla.study.board.model.entity.UserAccount</class>
	
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="current_session_context_class" value="thread" />
			<property name="cache.provider_class" value="org.hibernate.cache.internal.NoCacheProvider" />
			
			<property name="hibernate.search.default.directory_provider" value="filesystem"/>
			<property name="hibernate.search.default.indexBase" value="./data/lucene/indexes"/>
		</properties>

	</persistence-unit>

</persistence>